-- default local project file. I can be replaced by a local.gpr file in an earlier path for gprbuildwith "base";abstract project Default_Local is   C_Compiler_Options := ();   CPP_Compiler_Options := ();   Ada_Compiler_Options := ();   C_Linker_Options := ();   Ada_Linker_Options := ();   case Base.OS is      when "linux" | "macosx" =>         C_Linker_Options := (               "-pthread"         );         Ada_Linker_Options := (               "-pthread"         );      when "windows" =>      when others =>   end case;   case Base.Library_Kind is      when "dynamic" =>         C_Linker_Options := C_Linker_Options &(            "-dynamic"         );         Ada_Linker_Options := Ada_Linker_Options &(            "-dynamic"         );      when "static" =>         C_Linker_Options := C_Linker_Options &(            "-static"         );         Ada_Linker_Options := Ada_Linker_Options &(            "-static"         );      when others =>   end case;    CPP_Linker_Options := C_Linker_Options;end Default_Local;